{
    "extends": [
        "@tsconfig/node20/tsconfig.json",
        "../../tsconfig.base.json"
    ],
    "include": [
        "../../src/ts/**/*",
        "./src/ts/**/*"
    ],
    "exclude": [
        "./node_modules/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "../../",
        "declaration": true,
        "declarationMap": true,
        "lib": [ "ES2022" ],
        "module": "Node18",
        "moduleResolution": "Node16",
        "outDir": "../../dist/",
        "rootDir": "./",
        "sourceMap": true,
        "target": "ES2022"
    }
}