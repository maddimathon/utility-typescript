{
    "name": "@maddimathon/utility-js",
    "version": "2.0.0-beta.1",

    "author": "Maddi Mathon (www.maddimathon.com)",
    "description": "TypeScript utilities (types, functions, classes) to use in various projects.",
    "keywords": [
        "javascript-library",
        "javascript-utilities",
        "javascript-utility",
        "npm-package",
        "npm-package-typescript",
        "typescript-library",
        "typescript-utilities",
        "typescript-utility",
        "typescript-utility-types"
    ],

    "homepage": "https://maddimathon.github.io/utility-js",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/maddimathon/utility-js.git"
    },

    "config": {
        "title": "Utility TypeScript",
        "paths": {
            "releases": "@releases",
            "snapshots": ".snapshots"
        }
    },
    
    "engines": {
        "node": ">=22"
    },

    "type": "module",

    "files": [
        "./dist/**/*",
        "./LICENSE.md",
        "./package.json",
        "./README.md"
    ],

    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",

    "exports": {

        ".": "./dist/index.js",

        "./classes": "./dist/classes/index.js",

        "./functions": "./dist/functions/index.js",

        "./types": "./dist/types/index.d.ts",
        "./types/*": [
            "./dist/types/*.d.ts",
            "./dist/types/*/index.d.ts",
            "./dist/types/*"
        ],

        "./*": [
            "./dist/*.js",
            "./dist/*/index.js",
            "./dist/*"
        ]
    },

    "bugs": {
        "url": "https://github.com/maddimathon/utility-js/issues"
    },

    "scripts": {
        "commit": "sh .scripts/commit.sh",

        "postinstall": "run-p postinstall:*",
            "postinstall:1": "cd packages/utility-js && npm i",
            "postinstall:2": "cd packages/utility-node && npm i",
            "postinstall:3": "cd packages/utility-build && npm i",

        "compile": "run-s compile:*",
            "compile:ts": "run-p compile:ts:*",
                "compile:ts:1": "tsc --project packages/utility-js/src/ts/tsconfig.json",
                "compile:ts:2": "tsc --project packages/utility-node/src/ts/tsconfig.json",
                "compile:ts:3": "tsc --project packages/utility-build/src/ts/tsconfig.json",
                
        "document": "typedoc",
                
        "build": "run-s compile document"

    },
    "dependencies": {
        "@inquirer/prompts": "7.4.1"
    },
    "devDependencies": {
        "@tsconfig/node20": "20.1.5",
        "@types/jest": "30.0.0",
        "@types/luxon": "3.6.2",
        "@types/minimist": "1.2.5",
        "@types/node": "22.14.0",
        "glob": "11.0.3",
        "jest": "30.2.0",
        "luxon": "3.7.2",
        "minimist": "1.2.8",
        "npm-run-all": "4.1.5",
        "tsx": "4.20.6",
        "typedoc": "0.28.14",
        "typedoc-plugin-inline-sources": "1.3.0",
        "typescript": "5.9.3",
        "watch-cli": "0.2.3"
    }
}